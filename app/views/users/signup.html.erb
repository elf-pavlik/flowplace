<% @title='Signup' %>

<%= error_messages_for :user %>

<% form_for(:user, :url => signup_users_path) do |f| %>

  <table>
  <tr><td align="left"><%= f.label :user_name,"Account name:"%></td><td><%= f.text_field :user_name %></td></tr>
  <tr><td align="left"><%= f.label :first_name,"First name:"%></td><td><%= f.text_field :first_name %></td></tr>
  <tr><td align="left"><%= f.label :last_name,"Last name:"%></td><td><%= f.text_field :last_name %></td></tr>
  <tr><td align="left"><%= f.label :email,"E-mail:"%></td><td><%= f.text_field :email %> An activation key will be sent to this address, and it will also be used to pick your avatar icon via the <%= link_to 'Gravatar','http://gravatar.com',:target=>'external'%> service.</td></tr>
  </table>
  <p>
    <%= submit_tag "Sign up" %>
  </p>
<% end %>

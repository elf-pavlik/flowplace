<% @title="My Currencies #{@currency.name}: Settings" %>
<%= render(:partial => 'sub_nav') %>
<div id="embed_codes">
  <h3>Embed Codes</h3>
<p>
Account summary: <br />
<textarea rows="3" cols="50">
  &lt;iframe src ="<%= summary_widget_currency_account_url%>?hide_overall=1" width="100%" height="100%"&gt;&lt;/iframe&gt;
</textarea>
</p>
<p>
Account and Overall summary: <br />
<textarea rows="3" cols="50">
  &lt;iframe src ="<%= summary_widget_currency_account_url%>" width="100%" height="100%"&gt;&lt;/iframe&gt;
</textarea>
</p>
</div>
<h3>Settings for <%=@currency.name%> (as <%=@player_class%>)</h3>
<% form_tag(set_settings_currency_account_path(@currency_account), :method=>:put) do -%>
  <%= label_tag :notification,"Notification"%> 
  <%= select_tag :notification, options_for_select([['none',''], ['email','email']], @currency_account.notification) %>
  <br />
  <%= submit_tag "Update" %>
<% end %>

<% @title= h(@current_circle.name) +' Dashboard' %>
<%= stylesheet_link_tag 'dashboard' %>

<%= render(:partial => 'sub_nav') %>

<% if !@activities.empty? %>
<div id="activity">
  <h3>Recent Activity</h3>
  <table>
    <tr>
      <th>Date</th>
      <th>Currency</th>
      <th>Play</th>
    </tr>
  
<% for activity in @activities
  currency = activity.activityable
  a=YAML.load(activity.contents)
  play = Play.find(a['play_id']);
  content = currency.load_play_content(play)
  sentence = currency.api_play_sentence_fill(content['__meta']['name']) do |field_name|
    case content[field_name]
    when Hash
      content[field_name]['_name']
    else
      content[field_name].to_s
    end
  end
%>
  <tr>
    <td><%= standard_date_time(activity.created_at) %></td>
    <td><%= currency.name %></td>
    <td><%=h sentence%></td>
  </tr>
<% end %>
  </table>
</div>
<%end%>

<hr>
<% for currency_account in @currency_accounts 
  currency = currency_account.currency
  play_names = currency.api_play_names(currency_account.player_class)
  play_name = play_names[0]
%>
  <% if play_name %>
  <div class="dashboard_item" id="dashboard_<%= currency.name_as_html_id%>_<%=currency_account.player_class%>" title="<%=h currency.description%>">
    <div class="dashboard_play">
      <%= render(:partial => 'play', :object => currency_account) %>
    </div>
    <p class="dashboard_title">
      <%= render_currency_icon(currency) %> <%= link_to currency.name, play_currency_account_url(currency_account) %><% if !currency.symbol.blank? %>&nbsp;(<%=currency_account.currency.symbol%>)<%end%> as <%= currency_account.player_class%>
    </p>
    <div class="dashboard_explanation">
      <%= currency_account.render_state %><br />
      <%= link_to 'History', play_history_path(currency_account,play_name) %>
    </div>
  </div>
  <% end %>
<% end %>
